{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "@nuxtjs", // extends 'standard', 'plugin:vue/recommended'; plugins 'vue'
    "plugin:nuxt/base", // nuxt base *rules*
    "plugin:nuxt/recommended", // nuxt recommended *rules*
    "eslint-config-prettier",
    "prettier",
    "prettier/vue"
  ],
  "plugins": [
    "nuxt",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "prefer-const": "off"
  },
  "overrides": [
    // prevent prettier rules from messing up gulpfiles
    {
      "files": ["*gulpfile*"],
      "rules": {
        "prettier/prettier": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "require-await": "off"
      }
    }
  ]
}
